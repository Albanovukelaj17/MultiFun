<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MyCrossPlatformApp.Calculator.CalculatorWindow"
        Title="Calculator">
    <StackPanel>
        <TextBlock Text="Calculator"/>
        <TextBox Name="InputA" Watermark="Enter first number"/>
        <TextBox Name="InputB" Watermark="Enter second number"/>
        <Button Content="Add" Click="OnAddClick"/>
        <Button Content="Subtract" Click="OnSubtractClick"/>
        <Button Content="Multiply" Click="OnMultiplyClick"/>
        <Button Content="Divide" Click="OnDivideClick"/>
        <TextBlock Name="ResultTextBlock" Text="Result: "/>
    </StackPanel>
</Window>
